<?xml version="1.0"?>
<robot name="duda" xmlns:xacro="http://ros.org/wiki/xacro">
     <!-- Include Materials -->
     <material name="Black">
         <color rgba="0.0 0.0 0.0 1.0"/>
     </material>
     <material name="Red">
         <color rgba="0.8 0.0 0.0 1.0"/>
     </material>
     <material name="White">
         <color rgba="1 1 1 1"/>
     </material>

     <!--Include URDF/XACRO files -->
     <xacro:include filename="$(find duda_description)/urdf/wheel.urdf.xacro" />

     <!-- Constants -->
     <xacro:property name="M_PI" value="3.14159"/>

     <!-- Middle Compartment Dimensions -->
     <xacro:property name="middle_comp_length" value="2.6" />
     <xacro:property name="middle_comp_width" value="0.6" />
     <xacro:property name="middle_comp_height" value="0.4" />

     <!-- Front Compartment Dimensions -->
     <xacro:property name="front_comp_length" value="1.6" />
     <xacro:property name="front_comp_width" value="5.6" />
     <xacro:property name="front_comp_height" value="0.4" />

    <!-- Wheel Properties -->
    <xacro:property name="wheel_length" value="0.1143" />
    <xacro:property name="wheel_radius" value="0.1651" />

    <!-- Base link / Middle Compartment -->
    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>    
            <geometry>
                <box size="${middle_comp_length} ${middle_comp_width} ${middle_comp_height}"/>
            </geometry>
            <material name="Black" />
        </visual>
    </link>

    <!-- Front link / Front Compartment -->
    <link name="front_link">
        <visual>
            <origin xyz="0.8 0.0 0.0" rpy="0.0 0.0 0.0"/>    
            <geometry>
                <box size="${front_comp_length} ${front_comp_width} ${front_comp_height}"/>
            </geometry>
            <material name="Black" />
        </visual>
    </link>

    <joint name="base_front_joint" type="fixed">
        <origin xyz="1.3 0 0" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="front_link"/>        
    </joint>

     <!-- duda wheel macros -->
    <xacro:duda_wheel wheel_prefix="front_left">
        <origin xyz="0 0 0" rpy="0 0 0" />
    </xacro:duda_wheel>

</robot>
